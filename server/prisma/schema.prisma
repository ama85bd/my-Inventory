generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users{
  id    String @unique @id @default(uuid()) @db.Uuid
  firstname String
  lastname String?
  phone String
  email String @unique
  username String @unique
  gender String?
  image String?
  password String
  companyId  String @db.Uuid
  userGroupId  String @db.Uuid
  // permissiongroupId  String @db.Uuid
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  company Companies @relation(fields: [companyId], references: [id])
  // permissiongroup    PermissionGroup @relation("PermissionGroupUsers", fields: [permissiongroupId], references: [id])
  updatedPermissionGroups PermissionGroup[] @relation("PermissionGroupUpdatedBy")
  userGroup UserGroup @relation(fields: [userGroupId], references: [id])
}

model Companies{
  id    String @unique @id @default(uuid()) @db.Uuid
  name String
  address String
  type String
  phone String
  country String
  chargeAmount Float
  vatAmount Float
  email String @unique
  username String @unique
  currency String 
  password String
  image String?
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  permissionGroup PermissionGroup[]
  users Users[]
  userGroup UserGroup[]
}

model PermissionGroup{
  id    String @unique @id @default(uuid()) @db.Uuid
  name String
  isView  Boolean @default(false)
  isCreate  Boolean @default(false)
  isUpdate  Boolean @default(false)
  isDelete  Boolean @default(false)
  updateBy  String @db.Uuid
  companyId  String @db.Uuid
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userGroup UserGroup[]
  company Companies @relation(fields: [companyId], references: [id])

  // users   Users[]  @relation("PermissionGroupUsers")

  updatedByUser Users @relation("PermissionGroupUpdatedBy", fields: [updateBy], references: [id])

}

model UserGroup{
  id    String @unique @id @default(uuid()) @db.Uuid
  name String
  companyId  String @db.Uuid
  permissiongroupId  String @db.Uuid
  createAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  permissiongroup   PermissionGroup @relation( fields: [permissiongroupId], references: [id])
  company Companies @relation(fields: [companyId], references: [id])
  users Users[]
@@unique([companyId, name])  // ðŸ‘ˆ This line ensures name is unique **inside** a company
}